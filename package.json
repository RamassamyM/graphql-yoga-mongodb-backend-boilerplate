{
  "name": "server",
  "version": "1.0.0",
  "description": "Server graphql api with graphql-yoga by Michael Ramassamy",
  "main": "app.js",
  "author": "Michael Ramassamy",
  "license": "proprietary",
  "private": true,
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js --exec babel-node",
    "clean": "rm -rf build && mkdir build",
    "build": "cross-env NODE_ENV=production yarn run clean && babel -d ./build ./src -s",
    "start": "cross-env NODE_ENV=production yarn run start:single",
    "start:single": "node server.js",
    "start:deamon": "pm2 start server.js",
    "stop": "pm2 stop server.js",
    "logs": "pm2 logs",
    "eslint": "eslint src"
  },
  "engines": {
    "node": ">=10.x"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.15.3",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^1.18.10",
    "debug": "^4.1.1",
    "consola": "^2.5.6",
    "morgan": "^1.9.1",
    "jsdoc": "^3.5.5",
    "documentation": "^9.3.1"
  },
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "cross-env": "^5.2.0",
    "dotenv": "7.0.0",
    "graphql-yoga": "^1.17.4",
    "merge-graphql-schemas": "^1.5.8",
    "apollo-server-errors": "^2.2.1",
    "compression": "^1.7.4",
    "moment": "^2.24.0",
    "mongoose": "^5.4.20",
    "nodemailer": "^6.4.16",
    "lodash": "^4.17.11",
    "jsonwebtoken": "^8.5.1",
    "bcryptjs": "^2.4.3",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "passport-ldapauth": "^2.1.2",
    "passport-jwt": "^4.0.0",
    "pm2": "^3.4.0",
    "shortid": "^2.2.14",
    "helmet": "^3.16.0",
    "graphql-disable-introspection": "^1.1.0",
    "graphql-constraint-directive": "^1.3.0"
  },
  "nodemonConfig": {
    "ext": "js,json,graphql"
  }
}
